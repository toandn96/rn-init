{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@moneymoon/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", ".babelrc", "metro.config.js", "jest.config.js"],
  "include": ["src/**/*"]
}
