{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@appConstants": ["src/appConstants"],
      "@appStyles": ["src/appStyles"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@navigations": ["src/navigations"],
      "@screens": ["src/screens"],
      "@services": ["src/services"],
      "@stores": ["src/stores"],
      "@utils": ["src/utils"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": ["src/**/*"]
}
